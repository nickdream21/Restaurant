# Puerto del servidor backend
PORT=3000

# Entorno de ejecución (development, production)
NODE_ENV=development

# Zona horaria (por defecto: America/Lima para Perú)
TZ=America/Lima

# URL del frontend para CORS (separar múltiples URLs con comas)
# Ejemplos:
# - Desarrollo local: http://localhost:5173
# - Producción: https://tu-dominio.com
# - Red local: http://192.168.1.100:5173
FRONTEND_URL=http://localhost:5173

# Base de datos (SQLite - la ruta es relativa al directorio backend)
DB_PATH=./database/restaurant.db
